<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태그를 골라주세요!"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"/>

        <GridLayout
            android:id="@+id/tagsGridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructionTextView"
            android:layout_marginTop="8dp"
            android:columnCount="2"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">

            <!-- 각 태그 버튼 추가 -->
            <Button
                android:id="@+id/studyButton1"
                style="@style/TagButton"
                android:text="공부하기 좋은" />

            <!-- 다른 태그 버튼들 추가 -->
            <Button
                android:id="@+id/studyButton2"
                style="@style/TagButton"
                android:text="사진 찍기 좋은" />
            <Button
                android:id="@+id/studyButton3"
                style="@style/TagButton"
                android:text="수다떨기 좋은" />
            <Button
                android:id="@+id/studyButton4"
                style="@style/TagButton"
                android:text="맛있는 디저트" />
            <Button
                android:id="@+id/studyButton5"
                style="@style/TagButton"
                android:text="특이한 메뉴" />
            <Button
                android:id="@+id/studyButton6"
                style="@style/TagButton"
                android:text="매장이 넓은" />
            <Button
                android:id="@+id/studyButton7"
                style="@style/TagButton"
                android:text="동물이 있는" />
            <Button
                android:id="@+id/studyButton8"
                style="@style/TagButton"
                android:text="기타" />


        </GridLayout>

    </RelativeLayout>


<!--    <net.daum.android.map.MapView-->
<!--        android:id="@+id/map_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->

</androidx.constraintlayout.widget.ConstraintLayout>